---
export interface Props {
	title: string;
	date: Date;
	excerpt: string;
	slug: string;
}

const { title, date, excerpt, slug } = Astro.props;
---

<a href={`/blog-posts/${slug}`}>
	<article class="border rounded-lg p-4">
		<h3 class="text-lg font-semibold mb-2">{title}</h3>
		<p class="text-gray-500 text-sm mb-2">{date.toLocaleString()}</p>
		<p class="text-gray-700">
			{excerpt}
		</p>
	</article>
</a>
